      // Command Palette (Ctrl+K or /)
      (function() {
        var palette = document.getElementById('cmd-palette');
        var overlay = document.getElementById('cmd-overlay');
        var input = document.getElementById('cmd-input');
        var results = document.getElementById('cmd-results');
        if (!palette || !input || !results) return;

        var dataEl = document.getElementById('cmd-tools-data');
        if (!dataEl) return;
        var tools = JSON.parse(dataEl.textContent);
        var selectedIndex = -1;

        function getRecentPaths() {
          try { return JSON.parse(localStorage.getItem('recentTools') || '[]'); } catch(e) { return []; }
        }

        function openPalette() {
          palette.classList.remove('hidden');
          input.value = '';
          selectedIndex = -1;
          var recent = getRecentPaths();
          var sorted = tools.slice();
          if (recent.length > 0) {
            sorted.sort(function(a, b) {
              var aIdx = recent.indexOf(a.path);
              var bIdx = recent.indexOf(b.path);
              if (aIdx !== -1 && bIdx === -1) return -1;
              if (aIdx === -1 && bIdx !== -1) return 1;
              if (aIdx !== -1 && bIdx !== -1) return aIdx - bIdx;
              return 0;
            });
          }
          renderResults(sorted, recent);
          setTimeout(function() { input.focus(); }, 50);
        }

        function closePalette() {
          palette.classList.add('hidden');
          input.value = '';
        }

        function renderResults(list, recent) {
          results.innerHTML = '';
          selectedIndex = list.length > 0 ? 0 : -1;
          recent = recent || getRecentPaths();
          list.forEach(function(tool, i) {
            var div = document.createElement('a');
            div.href = tool.path;
            div.className = 'cmd-item flex items-center gap-3 px-4 py-2.5 cursor-pointer text-gray-300 hover:bg-gray-800 transition-colors';
            if (i === 0) div.classList.add('bg-gray-800', 'text-white');
            var isRecent = recent.indexOf(tool.path) !== -1;
            var badge = isRecent ? '<span class="text-[10px] px-1.5 py-0.5 bg-amber-600/20 text-amber-400 rounded ml-1.5">Recent</span>' : '';
            div.innerHTML = '<span class="text-xl flex-shrink-0">' + tool.icon + '</span>' +
              '<div class="flex-1 min-w-0">' +
                '<div class="flex items-center">' +
                  '<span class="text-sm font-medium truncate">' + tool.name + '</span>' + badge +
                '</div>' +
                '<p class="text-xs text-gray-500 truncate mt-0.5">' + (tool.description || '') + '</p>' +
              '</div>' +
              '<span class="text-xs text-gray-500 flex-shrink-0">' + tool.category + '</span>';
            results.appendChild(div);
          });
        }

        function updateSelection() {
          var items = results.querySelectorAll('.cmd-item');
          items.forEach(function(item, i) {
            if (i === selectedIndex) {
              item.classList.add('bg-gray-800', 'text-white');
              item.classList.remove('text-gray-300');
              item.scrollIntoView({ block: 'nearest' });
            } else {
              item.classList.remove('bg-gray-800', 'text-white');
              item.classList.add('text-gray-300');
            }
          });
        }

        input.addEventListener('input', function() {
          var q = input.value.toLowerCase().trim();
          var recent = getRecentPaths();
          if (!q) {
            var sorted = tools.slice();
            if (recent.length > 0) {
              sorted.sort(function(a, b) {
                var aIdx = recent.indexOf(a.path);
                var bIdx = recent.indexOf(b.path);
                if (aIdx !== -1 && bIdx === -1) return -1;
                if (aIdx === -1 && bIdx !== -1) return 1;
                if (aIdx !== -1 && bIdx !== -1) return aIdx - bIdx;
                return 0;
              });
            }
            renderResults(sorted, recent);
          } else {
            var filtered = tools.filter(function(t) {
              return t.name.toLowerCase().includes(q) || t.category.toLowerCase().includes(q) || (t.description && t.description.toLowerCase().includes(q));
            });
            renderResults(filtered, recent);
          }
        });

        input.addEventListener('keydown', function(e) {
          var items = results.querySelectorAll('.cmd-item');
          if (e.key === 'ArrowDown') {
            e.preventDefault();
            selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
            updateSelection();
          } else if (e.key === 'ArrowUp') {
            e.preventDefault();
            selectedIndex = Math.max(selectedIndex - 1, 0);
            updateSelection();
          } else if (e.key === 'Enter') {
            e.preventDefault();
            if (items[selectedIndex]) items[selectedIndex].click();
          } else if (e.key === 'Escape') {
            closePalette();
          }
        });

        overlay.addEventListener('click', closePalette);

        document.addEventListener('keydown', function(e) {
          if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
            e.preventDefault();
            openPalette();
            return;
          }
          if (e.key === '/' && palette.classList.contains('hidden')) {
            var tag = document.activeElement ? document.activeElement.tagName : '';
            if (tag !== 'INPUT' && tag !== 'TEXTAREA' && !(document.activeElement && document.activeElement.isContentEditable)) {
              e.preventDefault();
              openPalette();
            }
          }
        });
      })();
    </script>

