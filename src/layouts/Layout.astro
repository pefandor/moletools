          eth: '0xbB445a4AB7AaAD0372e6F1aA13DaCA3FC01fBAe7',
          sol: '6g6Zypxp2oVHxq1m6c5vsuvbjAWgeJfzTr2FoAjLy1sR'
        };

        // Shorten address for display: first 8 + ... + last 6
        function shortenAddress(address) {
          if (address.length <= 14) return address;
          return address.slice(0, 8) + '...' + address.slice(-6);
        }

        // Set shortened addresses
        var btcShort = document.getElementById('btc-short');
        var ethShort = document.getElementById('eth-short');
        var solShort = document.getElementById('sol-short');

        var btcFull = document.getElementById('btc-full');
        var ethFull = document.getElementById('eth-full');
        var solFull = document.getElementById('sol-full');

        if (btcShort) btcShort.textContent = shortenAddress(walletAddresses.btc);
        if (ethShort) ethShort.textContent = shortenAddress(walletAddresses.eth);
        if (solShort) solShort.textContent = shortenAddress(walletAddresses.sol);

        if (btcFull) btcFull.textContent = walletAddresses.btc;
        if (ethFull) ethFull.textContent = walletAddresses.eth;
        if (solFull) solFull.textContent = walletAddresses.sol;

        // Copy button functionality
        var copyButtons = document.querySelectorAll('.copy-btn');
        copyButtons.forEach(function(btn) {
          btn.addEventListener('click', function() {
            var wallet = btn.getAttribute('data-wallet');
            var address = walletAddresses[wallet];

            if (address && navigator.clipboard) {
              navigator.clipboard.writeText(address).then(function() {
                // Change button text to checkmark
                var originalText = btn.textContent;
                btn.textContent = '‚úì Copied';
                btn.classList.add('bg-green-100', 'dark:bg-green-900/30', 'text-green-700', 'dark:text-green-400');
                btn.classList.remove('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-700', 'dark:text-amber-400');

                // Restore after 2 seconds
                setTimeout(function() {
                  btn.textContent = originalText;
                  btn.classList.remove('bg-green-100', 'dark:bg-green-900/30', 'text-green-700', 'dark:text-green-400');
                  btn.classList.add('bg-amber-100', 'dark:bg-amber-900/30', 'text-amber-700', 'dark:text-amber-400');
                }, 2000);
              }).catch(function(err) {
                console.error('Copy failed:', err);
              });
            }
          });
        });
      })();
    </script>
  </body>
