          var recent = [];
          try { recent = JSON.parse(localStorage.getItem('recentTools') || '[]'); } catch(e) {}
          recent = recent.filter(function(p) { return p !== path; });
          recent.unshift(path);
          if (recent.length > 5) recent = recent.slice(0, 5);
