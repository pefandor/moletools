---
import Layout from '../../layouts/Layout.astro';
import FAQ from '../../components/FAQ.astro';
import toolsData from '../../data/tools.json';

const tool = toolsData.find(t => t.id === 'qr-advanced')!;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: tool.name,
  description: tool.description,
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Any',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD'
  },
  browserRequirements: 'Requires JavaScript',
  permissions: 'No special permissions required'
};

const faqJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: tool.faq.map(item => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.answer
    }
  }))
};

const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:8000';
---

<Layout title={tool.metaTitle} description={tool.metaDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqJsonLd)} />
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">ðŸŽ¨ QR Code Advanced</h1>
      <p class="text-gray-600 dark:text-gray-400">Advanced QR code generator with custom colors and high resolution</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Settings Panel -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 space-y-4">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">QR Code Settings</h3>

        <!-- Content Input -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Content</label>
          <textarea
            id="qrContent"
            rows="4"
            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:text-gray-100"
            placeholder="Enter text or URL..."
          ></textarea>
        </div>

        <!-- Size Selection -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Box Size</label>
          <select
            id="qrSize"
            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500"
          >
            <option value="5">Small (5px per box)</option>
            <option value="10" selected>Medium (10px per box)</option>
            <option value="15">Large (15px per box)</option>
            <option value="20">Extra Large (20px per box)</option>
          </select>
          <p class="text-xs text-gray-500 dark:text-gray-400 dark:text-gray-500 mt-1">Larger box size = larger QR code image</p>
        </div>

        <!-- Error Correction -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Error Correction</label>
          <select
            id="errorCorrection"
            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500"
          >
            <option value="L">Low (7%)</option>
            <option value="M" selected>Medium (15%)</option>
            <option value="Q">Quartile (25%)</option>
            <option value="H">High (30%)</option>
          </select>
          <p class="text-xs text-gray-500 dark:text-gray-400 dark:text-gray-500 mt-1">Higher levels allow QR codes to be read even if partially damaged</p>
        </div>

        <!-- Border Size -->
        <div>
          <div class="flex items-center justify-between mb-2">
            <label class="text-sm font-medium text-gray-700">Border Size: <span id="borderValue">4</span> modules</label>
          </div>
          <input
            type="range"
            id="border"
            min="0"
            max="10"
            value="4"
            class="w-full"
          />
        </div>

        <!-- Colors -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Foreground Color</label>
            <div class="flex items-center space-x-2">
              <input
                type="color"
                id="fillColor"
                value="#000000"
                class="h-10 w-16 rounded cursor-pointer"
              />
              <input
                type="text"
                id="fillColorText"
                value="#000000"
                class="flex-1 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm font-mono"
              />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Background Color</label>
            <div class="flex items-center space-x-2">
              <input
                type="color"
                id="backColor"
                value="#FFFFFF"
                class="h-10 w-16 rounded cursor-pointer"
              />
              <input
                type="text"
                id="backColorText"
                value="#FFFFFF"
                class="flex-1 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm font-mono"
              />
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-2 pt-4">
          <button
            id="generateBtn"
            class="w-full px-4 py-2 bg-primary-600 dark:bg-primary-500 text-white rounded-lg hover:bg-primary-700 transition-colors"
          >
            Generate QR Code
          </button>
          <button
            id="downloadBtn"
            disabled
            class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors disabled:bg-gray-400 disabled:cursor-not-allowed"
          >
            Download PNG
          </button>
        </div>

        <!-- Quick Templates -->
        <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
          <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Quick Templates</p>
          <div class="flex flex-wrap gap-2">
            <button class="quick-link px-3 py-1 bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md text-sm hover:bg-gray-200" data-url="https://example.com">
              Website
            </button>
            <button class="quick-link px-3 py-1 bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md text-sm hover:bg-gray-200" data-url="mailto:email@example.com">
              Email
            </button>
            <button class="quick-link px-3 py-1 bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md text-sm hover:bg-gray-200" data-url="tel:+1234567890">
              Phone
            </button>
          </div>
        </div>
      </div>

      <!-- Preview Panel -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Preview</h3>

        <!-- QR Code Preview -->
        <div class="flex items-center justify-center min-h-[400px] bg-gray-50 dark:bg-gray-700 rounded-lg relative">
          <div id="qrPreview" class="p-4">
            <p class="text-gray-400 dark:text-gray-500 text-center">Configure settings and click "Generate QR Code"</p>
          </div>

          <!-- Loading Spinner -->
          <div id="loadingSpinner" class="hidden absolute inset-0 flex items-center justify-center bg-white bg-opacity-90">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
          </div>
        </div>

        <!-- Error Message -->
        <div id="error" class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="ml-3 text-sm text-red-800" id="errorMessage"></p>
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <FAQ items={tool.faq} />
  </div>
</Layout>

<script define:vars={{ API_URL }}>
  let currentImageBlob = null;

  const qrContent = document.getElementById('qrContent');
  const qrSize = document.getElementById('qrSize');
  const errorCorrection = document.getElementById('errorCorrection');
  const border = document.getElementById('border');
  const borderValue = document.getElementById('borderValue');
  const fillColor = document.getElementById('fillColor');
  const fillColorText = document.getElementById('fillColorText');
  const backColor = document.getElementById('backColor');
  const backColorText = document.getElementById('backColorText');
  const generateBtn = document.getElementById('generateBtn');
  const downloadBtn = document.getElementById('downloadBtn');
  const qrPreview = document.getElementById('qrPreview');
  const loadingSpinner = document.getElementById('loadingSpinner');
  const error = document.getElementById('error');
  const errorMessage = document.getElementById('errorMessage');

  // Sync color pickers with text inputs
  if (fillColor) {
    fillColor.addEventListener('input', function() {
      if (fillColorText) fillColorText.value = fillColor.value;
    });
  }

  if (fillColorText) {
    fillColorText.addEventListener('input', function() {
      if (fillColor) fillColor.value = fillColorText.value;
    });
  }

  if (backColor) {
    backColor.addEventListener('input', function() {
      if (backColorText) backColorText.value = backColor.value;
    });
  }

  if (backColorText) {
    backColorText.addEventListener('input', function() {
      if (backColor) backColor.value = backColorText.value;
    });
  }

  // Update border value
  if (border) {
    border.addEventListener('input', function() {
      if (borderValue) borderValue.textContent = border.value;
    });
  }

  // Quick templates
  document.querySelectorAll('.quick-link').forEach(function(button) {
    button.addEventListener('click', function() {
      const url = button.dataset.url || '';
      if (qrContent) qrContent.value = url;
    });
  });

  // Generate QR Code
  if (generateBtn) {
    generateBtn.addEventListener('click', async function() {
      const content = qrContent ? qrContent.value.trim() : '';

      if (!content) {
        showError('Please enter some content to generate a QR code');
        return;
      }

      hideError();
      if (loadingSpinner) loadingSpinner.classList.remove('hidden');
      if (downloadBtn) downloadBtn.disabled = true;

      try {
        const formData = new FormData();
        formData.append('data', content);
        formData.append('size', qrSize ? qrSize.value : '10');
        formData.append('border', border ? border.value : '4');
        formData.append('fill_color', fillColor ? fillColor.value : '#000000');
        formData.append('back_color', backColor ? backColor.value : '#ffffff');

        const response = await fetch(API_URL + '/qr-code', {
          method: 'POST',
          body: formData,
        });

        if (!response.ok) {
          const errorData = await response.json().catch(function() { return {}; });
          throw new Error(errorData.detail || 'Server error: ' + response.status);
        }

        const blob = await response.blob();
        currentImageBlob = blob;

        // Display preview
        const url = URL.createObjectURL(blob);
        if (qrPreview) {
          qrPreview.innerHTML = '<img src="' + url + '" alt="QR Code" class="max-w-full h-auto rounded" />';
        }

        if (downloadBtn) downloadBtn.disabled = false;

      } catch (err) {
        showError(err.message || 'Failed to generate QR code. Please check your connection and try again.');
      } finally {
        if (loadingSpinner) loadingSpinner.classList.add('hidden');
      }
    });
  }

  // Download QR Code
  if (downloadBtn) {
    downloadBtn.addEventListener('click', function() {
      if (!currentImageBlob) return;

      const url = URL.createObjectURL(currentImageBlob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'qrcode.png';
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    });
  }

  function showError(message) {
    if (errorMessage) errorMessage.textContent = message;
    error?.classList.remove('hidden');
  }

  function hideError() {
    error?.classList.add('hidden');
  }
</script>
