---
import Layout from '../../layouts/Layout.astro';
import FAQ from '../../components/FAQ.astro';
import toolsData from '../../data/tools.json';

const tool = toolsData.find(t => t.id === 'pdf-delete-pages')!;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: tool.name,
  description: tool.description,
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Any',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD'
  },
  browserRequirements: 'Requires JavaScript',
  permissions: 'No special permissions required'
};

const faqJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: tool.faq.map(item => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.answer
    }
  }))
};
---

<Layout title={tool.metaTitle} description={tool.metaDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqJsonLd)} />

  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
        <img src="/images/mole/Converter.png" alt="Mole's Tools" class="inline h-14 w-14 mr-2 object-contain" style="vertical-align: -10px;" />
        <span data-i18n="dpTitle">Delete Pages</span>
      </h1>
      <p class="text-gray-600 dark:text-gray-400" data-i18n="dpDesc">Remove specific pages from a PDF document</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 space-y-6">

      <!-- Drop Zone -->
      <div
        id="dropZone"
        class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl p-8 text-center cursor-pointer hover:border-amber-400 dark:hover:border-amber-500 transition-colors"
      >
        <svg class="w-12 h-12 mx-auto text-gray-400 dark:text-gray-500 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <p class="text-gray-600 dark:text-gray-400 font-medium" data-i18n="dpUpload">Drag & drop a PDF file here or click to browse</p>
        <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">PDF — max 50MB</p>
        <input type="file" id="fileInput" accept="application/pdf" class="hidden" />
      </div>

      <!-- Settings Section -->
      <div id="settingsSection" class="hidden space-y-5">
        <!-- File info card -->
        <div class="flex items-center gap-4 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
          <div class="w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-gray-900 dark:text-gray-100 truncate" id="fileName">—</p>
            <p class="text-sm text-gray-500 dark:text-gray-400" id="fileInfo">—</p>
          </div>
          <button id="changeFileBtn" class="text-sm text-amber-600 dark:text-amber-400 hover:text-amber-700 font-medium whitespace-nowrap">
            <span data-i18n="dpChange">Change</span>
          </button>
        </div>

        <!-- Pages to delete input -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" data-i18n="dpPagesToDelete">Pages to delete</label>
          <input
            type="text"
            id="pagesInput"
            placeholder="2, 4, 6"
            data-i18n-placeholder="dpPlaceholder"
            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent dark:bg-gray-700 dark:text-gray-100"
          />
        </div>

        <!-- Warning block -->
        <div id="warningBlock" class="hidden p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            <p class="text-sm text-red-800 dark:text-red-200" id="warningText"></p>
          </div>
        </div>

        <!-- Delete button -->
        <button id="deleteBtn" disabled class="w-full px-6 py-3 bg-red-500 hover:bg-red-600 text-white rounded-lg font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          <span data-i18n="dpDeleteBtn">Delete Pages</span>
        </button>
      </div>

      <!-- Progress -->
      <div id="progressSection" class="hidden">
        <div class="space-y-3 py-2">
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400" data-i18n="dpDeleting">Deleting...</span>
            <span class="text-gray-500 dark:text-gray-400" id="progressText"></span>
          </div>
          <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2.5">
            <div id="progressBar" class="bg-red-500 h-2.5 rounded-full transition-all duration-300" style="width: 0%"></div>
          </div>
        </div>
      </div>

      <!-- Result -->
      <div id="resultSection" class="hidden">
        <div class="flex items-center justify-between flex-wrap gap-3 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="font-medium text-green-800 dark:text-green-200" data-i18n="dpSuccess">Pages deleted successfully!</p>
              <p class="text-sm text-green-600 dark:text-green-400" id="resultInfo"></p>
            </div>
          </div>
          <button id="downloadBtn" class="px-5 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span data-i18n="dpDownload">Download</span>
          </button>
        </div>
      </div>

      <!-- Error -->
      <div id="errorSection" class="hidden">
        <div class="p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-red-800 dark:text-red-200" id="errorMessage"></p>
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <FAQ items={tool.faq} />
  </div>
</Layout>

<script is:inline>
(function() {
  // ==========================================
  // API URL
  // ==========================================
  var API_URL = window.location.hostname === 'localhost'
    ? 'http://localhost:8000'
    : 'https://api.moletools.dev';

  // ==========================================
  // State
  // ==========================================
  var currentFile = null;
  var totalPages = 0;
  var resultBlob = null;

  // ==========================================
  // DOM Elements
  // ==========================================
  var dropZone = document.getElementById('dropZone');
  var fileInput = document.getElementById('fileInput');
  var settingsSection = document.getElementById('settingsSection');
  var fileName = document.getElementById('fileName');
  var fileInfo = document.getElementById('fileInfo');
  var changeFileBtn = document.getElementById('changeFileBtn');
  var pagesInput = document.getElementById('pagesInput');
  var warningBlock = document.getElementById('warningBlock');
  var warningText = document.getElementById('warningText');
  var deleteBtn = document.getElementById('deleteBtn');
  var progressSection = document.getElementById('progressSection');
  var progressBar = document.getElementById('progressBar');
  var progressText = document.getElementById('progressText');
  var resultSection = document.getElementById('resultSection');
  var resultInfo = document.getElementById('resultInfo');
  var downloadBtn = document.getElementById('downloadBtn');
  var errorSection = document.getElementById('errorSection');
  var errorMessage = document.getElementById('errorMessage');

  // ==========================================
  // Utilities
  // ==========================================
  function formatBytes(bytes) {
    if (bytes === 0) return '0 B';
    var k = 1024;
    var sizes = ['B', 'KB', 'MB', 'GB'];
    var i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
  }

  function escapeHtml(str) {
    var div = document.createElement('div');
    div.textContent = str;
    return div.innerHTML;
  }

  function t(key) {
    if (typeof MoleI18n !== 'undefined') return MoleI18n.t(key);
    return key;
  }

  function showError(msg) {
    errorSection.classList.remove('hidden');
    errorMessage.textContent = msg;
  }

  // ==========================================
  // Drop Zone
  // ==========================================
  if (dropZone) {
    dropZone.addEventListener('click', function() { fileInput.click(); });

    dropZone.addEventListener('dragover', function(e) {
      e.preventDefault();
      dropZone.classList.add('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
    });

    dropZone.addEventListener('dragleave', function(e) {
      e.preventDefault();
      dropZone.classList.remove('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
    });

    dropZone.addEventListener('drop', function(e) {
      e.preventDefault();
      dropZone.classList.remove('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
      var files = e.dataTransfer.files;
      if (files.length > 0 && files[0].type === 'application/pdf') {
        handleFile(files[0]);
      }
    });
  }

  if (fileInput) {
    fileInput.addEventListener('change', function() {
      if (fileInput.files.length > 0) {
        handleFile(fileInput.files[0]);
        fileInput.value = '';
      }
    });
  }

  if (changeFileBtn) {
    changeFileBtn.addEventListener('click', function() { fileInput.click(); });
  }

  // ==========================================
  // Handle File
  // ==========================================
  function handleFile(file) {
    if (file.size > 50 * 1024 * 1024) {
      showError('PDF file is too large. Maximum size is 50MB.');
      return;
    }

    if (file.type !== 'application/pdf') {
      showError('Please upload a PDF file.');
      return;
    }

    currentFile = file;
    totalPages = 0;
    resultBlob = null;

    // Hide results and errors
    resultSection.classList.add('hidden');
    errorSection.classList.add('hidden');
    warningBlock.classList.add('hidden');
    pagesInput.value = '';
    deleteBtn.disabled = true;

    // Show settings
    dropZone.classList.add('hidden');
    settingsSection.classList.remove('hidden');
    settingsSection.style.animation = 'fadeIn 0.3s ease';

    // File info
    fileName.textContent = file.name;
    fileInfo.textContent = formatBytes(file.size);

    // Count pages
    countPdfPages(file, function(count) {
      totalPages = count || 0;
      if (totalPages > 0) {
        fileInfo.textContent = formatBytes(file.size) + ' — ' + totalPages + ' ' + t('dpPages');
      } else {
        fileInfo.textContent = formatBytes(file.size);
      }
    });
  }

  // ==========================================
  // Count PDF Pages
  // ==========================================
  function countPdfPages(file, callback) {
    var reader = new FileReader();
    reader.onload = function(e) {
      var data = new Uint8Array(e.target.result);
      var count = 0;
      // Search for /Type /Page (not /Pages)
      for (var i = 0; i < data.length - 12; i++) {
        if (data[i] === 47 && data[i+1] === 84 && data[i+2] === 121 &&
            data[i+3] === 112 && data[i+4] === 101) {
          // Found /Type, look for /Page
          var rest = '';
          for (var j = i+5; j < Math.min(i+20, data.length); j++) {
            rest += String.fromCharCode(data[j]);
          }
          if (rest.match(/\s*\/Page[^s]/)) {
            count++;
          }
        }
      }
      callback(count > 0 ? count : null);
    };
    reader.readAsArrayBuffer(file);
  }

  // ==========================================
  // Pages Input Handler
  // ==========================================
  if (pagesInput) {
    pagesInput.addEventListener('input', function() {
      var raw = pagesInput.value.trim();

      if (!raw) {
        warningBlock.classList.add('hidden');
        deleteBtn.disabled = true;
        return;
      }

      // Parse comma-separated page numbers
      var parts = raw.split(',');
      var pages = [];
      var valid = true;

      for (var i = 0; i < parts.length; i++) {
        var trimmed = parts[i].trim();
        if (trimmed === '') continue;
        var num = parseInt(trimmed, 10);
        if (isNaN(num) || num < 1) {
          valid = false;
          break;
        }
        if (totalPages > 0 && num > totalPages) {
          valid = false;
          break;
        }
        if (pages.indexOf(num) === -1) {
          pages.push(num);
        }
      }

      if (!valid || pages.length === 0) {
        warningBlock.classList.add('hidden');
        deleteBtn.disabled = true;
        return;
      }

      // Check that we are not deleting all pages
      if (totalPages > 0 && pages.length >= totalPages) {
        warningBlock.classList.add('hidden');
        deleteBtn.disabled = true;
        return;
      }

      // Sort pages for display
      pages.sort(function(a, b) { return a - b; });

      // Show warning
      var pagesStr = pages.join(', ');
      var warningLabel = t('dpWarning');
      if (warningLabel === 'dpWarning') warningLabel = 'will be permanently removed';
      var pageLabel = pages.length === 1 ? (t('dpPage') !== 'dpPage' ? t('dpPage') : 'Page') : (t('dpPages') !== 'dpPages' ? t('dpPages') : 'Pages');

      warningText.textContent = pageLabel + ' ' + pagesStr + ' ' + warningLabel;
      warningBlock.classList.remove('hidden');
      deleteBtn.disabled = false;
    });
  }

  // ==========================================
  // Delete Pages
  // ==========================================
  if (deleteBtn) {
    deleteBtn.addEventListener('click', function() {
      if (!currentFile) return;

      var raw = pagesInput.value.trim();
      if (!raw) return;

      // Parse pages again
      var parts = raw.split(',');
      var pages = [];
      for (var i = 0; i < parts.length; i++) {
        var trimmed = parts[i].trim();
        if (trimmed === '') continue;
        var num = parseInt(trimmed, 10);
        if (!isNaN(num) && num >= 1 && pages.indexOf(num) === -1) {
          pages.push(num);
        }
      }

      if (pages.length === 0) return;

      // Hide previous results
      resultSection.classList.add('hidden');
      errorSection.classList.add('hidden');
      progressSection.classList.remove('hidden');
      deleteBtn.disabled = true;

      // Fake progress animation
      progressBar.style.width = '0%';
      var fakeProgress = 0;
      var progressInterval = setInterval(function() {
        if (fakeProgress < 85) {
          fakeProgress += Math.random() * 8;
          if (fakeProgress > 85) fakeProgress = 85;
          progressBar.style.width = fakeProgress + '%';
          progressText.textContent = Math.round(fakeProgress) + '%';
        }
      }, 300);

      var formData = new FormData();
      formData.append('file', currentFile);
      formData.append('pages', pages.join(','));

      fetch(API_URL + '/pdf/delete-pages', {
        method: 'POST',
        body: formData
      })
      .then(function(response) {
        if (!response.ok) {
          return response.json().then(function(data) {
            throw new Error(data.detail || 'Deletion failed');
          });
        }
        return response.blob();
      })
      .then(function(blob) {
        clearInterval(progressInterval);
        progressBar.style.width = '100%';
        progressText.textContent = '100%';
        resultBlob = blob;

        setTimeout(function() {
          progressSection.classList.add('hidden');
          deleteBtn.disabled = false;

          resultSection.classList.remove('hidden');
          resultSection.style.animation = 'fadeIn 0.3s ease';

          var remaining = totalPages > 0 ? (totalPages - pages.length) : '?';
          var pagesLabel = t('dpPages') !== 'dpPages' ? t('dpPages') : 'pages';
          resultInfo.textContent = remaining + ' ' + pagesLabel + ' — ' + formatBytes(blob.size);
        }, 400);
      })
      .catch(function(err) {
        clearInterval(progressInterval);
        progressSection.classList.add('hidden');
        deleteBtn.disabled = false;
        showError(err.message || 'Deletion failed. Please try again.');
      });
    });
  }

  // ==========================================
  // Download
  // ==========================================
  if (downloadBtn) {
    downloadBtn.addEventListener('click', function() {
      if (!resultBlob) return;
      var url = URL.createObjectURL(resultBlob);
      var a = document.createElement('a');
      a.href = url;
      var baseName = currentFile ? currentFile.name.replace('.pdf', '') : 'document';
      a.download = baseName + '_pages_deleted.pdf';
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    });
  }

  // ==========================================
  // i18n
  // ==========================================
  if (typeof MoleI18n !== 'undefined') {
    MoleI18n.addTranslations('en', {
      dpTitle: 'Delete Pages',
      dpDesc: 'Remove specific pages from a PDF document',
      dpUpload: 'Drag & drop a PDF file here or click to browse',
      dpChange: 'Change',
      dpPagesToDelete: 'Pages to delete',
      dpPlaceholder: '2, 4, 6',
      dpWarning: 'will be permanently removed',
      dpDeleteBtn: 'Delete Pages',
      dpDeleting: 'Deleting...',
      dpSuccess: 'Pages deleted successfully!',
      dpDownload: 'Download',
      dpPage: 'Page',
      dpPages: 'pages'
    });

    MoleI18n.addTranslations('ru', {
      dpTitle: 'Удалить страницы',
      dpDesc: 'Удаление определённых страниц из PDF документа',
      dpUpload: 'Перетащите PDF файл сюда или нажмите для выбора',
      dpChange: 'Сменить',
      dpPagesToDelete: 'Страницы для удаления',
      dpPlaceholder: '2, 4, 6',
      dpWarning: 'будут удалены безвозвратно',
      dpDeleteBtn: 'Удалить страницы',
      dpDeleting: 'Удаление...',
      dpSuccess: 'Страницы успешно удалены!',
      dpDownload: 'Скачать',
      dpPage: 'Страница',
      dpPages: 'страниц'
    });

    var currentLang = MoleI18n.getCurrentLang();
    MoleI18n.setLanguage(currentLang);
  }
})();
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
