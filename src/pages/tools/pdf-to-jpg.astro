---
import Layout from '../../layouts/Layout.astro';
import FAQ from '../../components/FAQ.astro';
import toolsData from '../../data/tools.json';

const tool = toolsData.find(t => t.id === 'pdf-to-jpg')!;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: tool.name,
  description: tool.description,
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Any',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD'
  },
  browserRequirements: 'Requires JavaScript',
  permissions: 'No special permissions required'
};

const faqJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: tool.faq.map(item => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.answer
    }
  }))
};
---

<Layout title={tool.metaTitle} description={tool.metaDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqJsonLd)} />

  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
        <img src="/images/mole/Converter.png" alt="Mole's Tools" class="inline h-14 w-14 mr-2 object-contain" style="vertical-align: -10px;" />
        <span>PDF to JPG</span>
      </h1>
      <p class="text-gray-600 dark:text-gray-400" data-i18n="p2jDesc">Convert PDF pages to high-quality JPG images</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 space-y-6">

      <!-- Drop Zone -->
      <div
        id="dropZone"
        class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl p-8 text-center cursor-pointer hover:border-amber-400 dark:hover:border-amber-500 transition-colors"
      >
        <div id="dropZoneContent">
          <svg class="w-12 h-12 mx-auto text-gray-400 dark:text-gray-500 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <p class="text-gray-600 dark:text-gray-400 font-medium" data-i18n="p2jUploadPdf">Drag & drop a PDF file here or click to browse</p>
          <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">PDF — max 20MB, 50 pages</p>
        </div>
        <input type="file" id="fileInput" accept="application/pdf" class="hidden" />
      </div>

      <!-- File Info + Settings -->
      <div id="settingsSection" class="hidden space-y-5">
        <!-- File info card -->
        <div class="flex items-center gap-4 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
          <div class="w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-gray-900 dark:text-gray-100 truncate" id="fileName">—</p>
            <p class="text-sm text-gray-500 dark:text-gray-400" id="fileInfo">—</p>
          </div>
          <button id="changeFileBtn" class="text-sm text-amber-600 dark:text-amber-400 hover:text-amber-700 font-medium whitespace-nowrap">
            <span data-i18n="p2jChangeFile">Change</span>
          </button>
        </div>

        <!-- Settings grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- DPI -->
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" data-i18n="p2jDpi">Resolution (DPI)</label>
            <select id="dpiSelect" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent dark:bg-gray-700 dark:text-gray-100">
              <option value="72">72 DPI — Low</option>
              <option value="150" selected>150 DPI — Medium</option>
              <option value="300">300 DPI — High</option>
            </select>
          </div>

          <!-- Quality -->
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              <span data-i18n="p2jQuality">JPG Quality</span>: <span id="qualityValue" class="text-amber-600 dark:text-amber-400">90</span>%
            </label>
            <input type="range" id="qualitySlider" min="1" max="100" value="90" class="w-full h-2 bg-gray-200 dark:bg-gray-600 rounded-lg appearance-none cursor-pointer accent-amber-500" />
            <div class="flex justify-between text-xs text-gray-400 dark:text-gray-500 mt-1">
              <span data-i18n="p2jSmallFile">Smaller file</span>
              <span data-i18n="p2jBetterQuality">Better quality</span>
            </div>
          </div>
        </div>

        <!-- Convert button -->
        <button id="convertBtn" class="w-full px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white rounded-lg font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span data-i18n="p2jConvert">Convert to JPG</span>
        </button>
      </div>

      <!-- Progress -->
      <div id="progressSection" class="hidden">
        <div class="space-y-3 py-2">
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400" data-i18n="p2jConverting">Converting...</span>
            <span class="text-gray-500 dark:text-gray-400" id="progressText"></span>
          </div>
          <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2.5">
            <div id="progressBar" class="bg-amber-500 h-2.5 rounded-full transition-all duration-300" style="width: 0%"></div>
          </div>
        </div>
      </div>

      <!-- Result -->
      <div id="resultSection" class="hidden space-y-4">
        <!-- Success header -->
        <div class="flex items-center justify-between flex-wrap gap-3 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="font-medium text-green-800 dark:text-green-200" data-i18n="p2jSuccess">Conversion complete!</p>
              <p class="text-sm text-green-600 dark:text-green-400" id="resultInfo"></p>
            </div>
          </div>
          <button id="downloadAllBtn" class="px-5 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span id="downloadAllText" data-i18n="p2jDownloadAll">Download All (ZIP)</span>
          </button>
        </div>

        <!-- Page thumbnails grid -->
        <div id="pagesGrid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
          <!-- Thumbnails inserted here -->
        </div>
      </div>

      <!-- Error -->
      <div id="errorSection" class="hidden">
        <div class="p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-red-800 dark:text-red-200" id="errorMessage"></p>
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <FAQ items={tool.faq} />
  </div>
</Layout>

<script is:inline>
(function() {
  // ==========================================
  // API URL
  // ==========================================
  var API_URL = window.location.hostname === 'localhost'
    ? 'http://localhost:8000'
    : 'https://api.moletools.dev';

  // ==========================================
  // State
  // ==========================================
  var currentFile = null;
  var resultBlob = null;
  var resultIsZip = false;
  var pageBlobs = []; // Individual page blobs extracted from ZIP or single JPG

  // ==========================================
  // DOM Elements
  // ==========================================
  var dropZone = document.getElementById('dropZone');
  var dropZoneContent = document.getElementById('dropZoneContent');
  var fileInput = document.getElementById('fileInput');
  var settingsSection = document.getElementById('settingsSection');
  var fileName = document.getElementById('fileName');
  var fileInfo = document.getElementById('fileInfo');
  var changeFileBtn = document.getElementById('changeFileBtn');
  var dpiSelect = document.getElementById('dpiSelect');
  var qualitySlider = document.getElementById('qualitySlider');
  var qualityValue = document.getElementById('qualityValue');
  var convertBtn = document.getElementById('convertBtn');
  var progressSection = document.getElementById('progressSection');
  var progressBar = document.getElementById('progressBar');
  var progressText = document.getElementById('progressText');
  var resultSection = document.getElementById('resultSection');
  var resultInfo = document.getElementById('resultInfo');
  var downloadAllBtn = document.getElementById('downloadAllBtn');
  var downloadAllText = document.getElementById('downloadAllText');
  var pagesGrid = document.getElementById('pagesGrid');
  var errorSection = document.getElementById('errorSection');
  var errorMessage = document.getElementById('errorMessage');

  // ==========================================
  // Utilities
  // ==========================================
  function formatBytes(bytes) {
    if (bytes === 0) return '0 B';
    var k = 1024;
    var sizes = ['B', 'KB', 'MB', 'GB'];
    var i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
  }

  function t(key) {
    if (typeof MoleI18n !== 'undefined') return MoleI18n.t(key);
    return key;
  }

  // ==========================================
  // Drop Zone
  // ==========================================
  if (dropZone) {
    dropZone.addEventListener('click', function() { fileInput.click(); });

    dropZone.addEventListener('dragover', function(e) {
      e.preventDefault();
      dropZone.classList.add('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
    });

    dropZone.addEventListener('dragleave', function(e) {
      e.preventDefault();
      dropZone.classList.remove('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
    });

    dropZone.addEventListener('drop', function(e) {
      e.preventDefault();
      dropZone.classList.remove('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
      var files = e.dataTransfer.files;
      if (files.length > 0 && files[0].type === 'application/pdf') {
        handleFile(files[0]);
      }
    });
  }

  if (fileInput) {
    fileInput.addEventListener('change', function() {
      if (fileInput.files.length > 0) {
        handleFile(fileInput.files[0]);
        fileInput.value = '';
      }
    });
  }

  if (changeFileBtn) {
    changeFileBtn.addEventListener('click', function() { fileInput.click(); });
  }

  // ==========================================
  // Handle File
  // ==========================================
  function handleFile(file) {
    if (file.size > 20 * 1024 * 1024) {
      showError('PDF file is too large. Maximum size is 20MB.');
      return;
    }

    currentFile = file;
    resultBlob = null;
    pageBlobs = [];

    // Hide results
    resultSection.classList.add('hidden');
    errorSection.classList.add('hidden');

    // Show settings
    settingsSection.classList.remove('hidden');
    settingsSection.style.animation = 'fadeIn 0.3s ease';

    // File info
    fileName.textContent = file.name;
    fileInfo.textContent = formatBytes(file.size);

    // Update drop zone
    dropZoneContent.innerHTML =
      '<p class="text-amber-600 dark:text-amber-400 font-medium">' + escapeHtml(file.name) + '</p>' +
      '<p class="text-sm text-gray-400 dark:text-gray-500 mt-1">' + formatBytes(file.size) + '</p>';
  }

  function escapeHtml(str) {
    var div = document.createElement('div');
    div.textContent = str;
    return div.innerHTML;
  }

  // ==========================================
  // Quality Slider
  // ==========================================
  if (qualitySlider) {
    qualitySlider.addEventListener('input', function() {
      qualityValue.textContent = qualitySlider.value;
    });
  }

  // ==========================================
  // Convert
  // ==========================================
  if (convertBtn) {
    convertBtn.addEventListener('click', function() {
      if (!currentFile) return;

      resultSection.classList.add('hidden');
      errorSection.classList.add('hidden');
      progressSection.classList.remove('hidden');
      convertBtn.disabled = true;

      // Animate progress bar
      progressBar.style.width = '0%';
      var fakeProgress = 0;
      var progressInterval = setInterval(function() {
        if (fakeProgress < 85) {
          fakeProgress += Math.random() * 8;
          if (fakeProgress > 85) fakeProgress = 85;
          progressBar.style.width = fakeProgress + '%';
          progressText.textContent = Math.round(fakeProgress) + '%';
        }
      }, 300);

      var formData = new FormData();
      formData.append('file', currentFile);
      formData.append('quality', qualitySlider.value);
      formData.append('dpi', dpiSelect.value);

      fetch(API_URL + '/convert/pdf-to-jpg', {
        method: 'POST',
        body: formData
      })
      .then(function(response) {
        if (!response.ok) {
          return response.json().then(function(data) {
            throw new Error(data.detail || 'Conversion failed');
          });
        }

        var contentType = response.headers.get('Content-Type') || '';
        resultIsZip = contentType.includes('zip');
        return response.blob();
      })
      .then(function(blob) {
        clearInterval(progressInterval);
        progressBar.style.width = '100%';
        progressText.textContent = '100%';
        resultBlob = blob;

        setTimeout(function() {
          progressSection.classList.add('hidden');
          convertBtn.disabled = false;

          if (resultIsZip) {
            extractZipAndShowPages(blob);
          } else {
            // Single page JPG
            pageBlobs = [{ blob: blob, name: (currentFile.name.replace('.pdf', '') || 'page') + '.jpg' }];
            showResults();
          }
        }, 400);
      })
      .catch(function(err) {
        clearInterval(progressInterval);
        progressSection.classList.add('hidden');
        convertBtn.disabled = false;
        showError(err.message || 'Conversion failed. Please try again.');
      });
    });
  }

  // ==========================================
  // Extract ZIP pages
  // ==========================================
  function extractZipAndShowPages(zipBlob) {
    // Use JSZip to extract pages for preview
    var script = document.createElement('script');
    script.src = 'https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js';
    script.onload = function() {
      JSZip.loadAsync(zipBlob).then(function(zip) {
        var entries = [];
        zip.forEach(function(relativePath, zipEntry) {
          if (!zipEntry.dir && relativePath.match(/\.(jpg|jpeg)$/i)) {
            entries.push({ path: relativePath, entry: zipEntry });
          }
        });

        // Sort by filename
        entries.sort(function(a, b) { return a.path.localeCompare(b.path); });

        var promises = entries.map(function(e) {
          return e.entry.async('blob').then(function(blob) {
            return { blob: blob, name: e.path };
          });
        });

        Promise.all(promises).then(function(results) {
          pageBlobs = results;
          showResults();
        });
      });
    };
    document.head.appendChild(script);
  }

  // ==========================================
  // Show Results
  // ==========================================
  function showResults() {
    resultSection.classList.remove('hidden');
    resultSection.style.animation = 'fadeIn 0.3s ease';

    var pageLabel = t('p2jPages');
    resultInfo.textContent = pageBlobs.length + ' ' + pageLabel + ' — ' + formatBytes(resultBlob.size);

    // Update download all button text
    if (pageBlobs.length === 1) {
      downloadAllText.textContent = t('p2jDownload');
    } else {
      downloadAllText.textContent = t('p2jDownloadAll') + ' (ZIP)';
    }

    // Render page grid
    pagesGrid.innerHTML = '';
    pageBlobs.forEach(function(page, index) {
      var card = document.createElement('div');
      card.className = 'bg-gray-50 dark:bg-gray-700/50 rounded-lg overflow-hidden border border-gray-200 dark:border-gray-600 group hover:border-amber-400 dark:hover:border-amber-500 transition-colors';
      card.style.animation = 'fadeIn 0.3s ease ' + (index * 0.05) + 's both';

      // Thumbnail
      var thumbWrap = document.createElement('div');
      thumbWrap.className = 'aspect-[3/4] bg-white dark:bg-gray-600 flex items-center justify-center p-1';
      var img = document.createElement('img');
      img.src = URL.createObjectURL(page.blob);
      img.alt = t('p2jPage') + ' ' + (index + 1);
      img.className = 'max-w-full max-h-full object-contain';
      thumbWrap.appendChild(img);
      card.appendChild(thumbWrap);

      // Footer
      var footer = document.createElement('div');
      footer.className = 'p-2 flex items-center justify-between';

      var label = document.createElement('span');
      label.className = 'text-xs text-gray-500 dark:text-gray-400';
      label.textContent = t('p2jPage') + ' ' + (index + 1);
      footer.appendChild(label);

      var dlBtn = document.createElement('button');
      dlBtn.className = 'text-xs text-amber-600 dark:text-amber-400 hover:text-amber-700 font-medium';
      dlBtn.textContent = t('p2jDownload');
      (function(p) {
        dlBtn.addEventListener('click', function() {
          var url = URL.createObjectURL(p.blob);
          var a = document.createElement('a');
          a.href = url;
          a.download = p.name;
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          URL.revokeObjectURL(url);
        });
      })(page);
      footer.appendChild(dlBtn);

      card.appendChild(footer);
      pagesGrid.appendChild(card);
    });
  }

  // ==========================================
  // Download All
  // ==========================================
  if (downloadAllBtn) {
    downloadAllBtn.addEventListener('click', function() {
      if (!resultBlob) return;
      var url = URL.createObjectURL(resultBlob);
      var a = document.createElement('a');
      a.href = url;
      var baseName = currentFile ? currentFile.name.replace('.pdf', '') : 'document';
      a.download = resultIsZip ? baseName + '_pages.zip' : baseName + '.jpg';
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    });
  }

  // ==========================================
  // Error
  // ==========================================
  function showError(msg) {
    errorSection.classList.remove('hidden');
    errorMessage.textContent = msg;
  }

  // ==========================================
  // i18n
  // ==========================================
  if (typeof MoleI18n !== 'undefined') {
    MoleI18n.addTranslations('en', {
      p2jDesc: 'Convert PDF pages to high-quality JPG images',
      p2jUploadPdf: 'Drag & drop a PDF file here or click to browse',
      p2jChangeFile: 'Change',
      p2jDpi: 'Resolution (DPI)',
      p2jQuality: 'JPG Quality',
      p2jSmallFile: 'Smaller file',
      p2jBetterQuality: 'Better quality',
      p2jConvert: 'Convert to JPG',
      p2jConverting: 'Converting...',
      p2jSuccess: 'Conversion complete!',
      p2jDownload: 'Download',
      p2jDownloadAll: 'Download All',
      p2jPage: 'Page',
      p2jPages: 'pages'
    });

    MoleI18n.addTranslations('ru', {
      p2jDesc: 'Конвертация страниц PDF в качественные JPG изображения',
      p2jUploadPdf: 'Перетащите PDF файл сюда или нажмите для выбора',
      p2jChangeFile: 'Сменить',
      p2jDpi: 'Разрешение (DPI)',
      p2jQuality: 'Качество JPG',
      p2jSmallFile: 'Меньший файл',
      p2jBetterQuality: 'Лучшее качество',
      p2jConvert: 'Конвертировать в JPG',
      p2jConverting: 'Конвертация...',
      p2jSuccess: 'Конвертация завершена!',
      p2jDownload: 'Скачать',
      p2jDownloadAll: 'Скачать все',
      p2jPage: 'Страница',
      p2jPages: 'страниц'
    });

    var currentLang = MoleI18n.getCurrentLang();
    MoleI18n.setLanguage(currentLang);
  }

  // Update DPI labels based on language
  function updateDpiLabels() {
    if (!dpiSelect) return;
    var low = t('p2jLow') !== 'p2jLow' ? t('p2jLow') : 'Low';
    var med = t('p2jMedium') !== 'p2jMedium' ? t('p2jMedium') : 'Medium';
    var high = t('p2jHigh') !== 'p2jHigh' ? t('p2jHigh') : 'High';
    dpiSelect.options[0].textContent = '72 DPI — ' + low;
    dpiSelect.options[1].textContent = '150 DPI — ' + med;
    dpiSelect.options[2].textContent = '300 DPI — ' + high;
  }

  if (typeof MoleI18n !== 'undefined') {
    MoleI18n.addTranslations('en', { p2jLow: 'Low', p2jMedium: 'Medium', p2jHigh: 'High' });
    MoleI18n.addTranslations('ru', { p2jLow: 'Низкое', p2jMedium: 'Среднее', p2jHigh: 'Высокое' });

    document.addEventListener('languagechange', updateDpiLabels);
    updateDpiLabels();
  }
})();
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: #f59e0b;
    cursor: pointer;
  }
</style>
