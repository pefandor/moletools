---
import Layout from '../../layouts/Layout.astro';
import FAQ from '../../components/FAQ.astro';
import toolsData from '../../data/tools.json';

const tool = toolsData.find(t => t.id === 'image-converter')!;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: tool.name,
  description: tool.description,
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Any',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD'
  },
  browserRequirements: 'Requires JavaScript',
  permissions: 'No special permissions required'
};

const faqJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: tool.faq.map(item => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.answer
    }
  }))
};
---

<Layout title={tool.metaTitle} description={tool.metaDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqJsonLd)} />

  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
        <img src="/images/mole/Converter.png" alt="Mole's Tools" class="inline h-14 w-14 mr-2 object-contain" style="vertical-align: -10px;" />
        <span>Image Format Converter</span>
      </h1>
      <p class="text-gray-600 dark:text-gray-400" data-i18n="icDesc">Convert images between PNG, JPG, WebP, BMP, TIFF, GIF, and ICO formats</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 space-y-6">

      <!-- Drop Zone -->
      <div
        id="dropZone"
        class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl p-8 text-center cursor-pointer hover:border-amber-400 dark:hover:border-amber-500 transition-colors"
      >
        <div id="dropZoneContent">
          <svg class="w-12 h-12 mx-auto text-gray-400 dark:text-gray-500 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <p class="text-gray-600 dark:text-gray-400 font-medium" data-i18n="icDragDrop">Drag & drop an image here or click to browse</p>
          <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">PNG, JPG, WebP, BMP, TIFF, GIF — max 10MB</p>
        </div>
        <input type="file" id="fileInput" accept="image/png,image/jpeg,image/webp,image/bmp,image/tiff,image/gif" class="hidden" />
      </div>

      <!-- Preview & File Info -->
      <div id="previewSection" class="hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Canvas Preview -->
          <div>
            <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" data-i18n="icPreview">Preview</p>
            <div class="bg-gray-100 dark:bg-gray-700 rounded-lg p-2 flex items-center justify-center min-h-[200px]" style="background-image: url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2220%22%20height%3D%2220%22%3E%3Crect%20width%3D%2220%22%20height%3D%2220%22%20fill%3D%22%23f0f0f0%22%2F%3E%3Crect%20width%3D%2210%22%20height%3D%2210%22%20fill%3D%22%23e0e0e0%22%2F%3E%3Crect%20x%3D%2210%22%20y%3D%2210%22%20width%3D%2210%22%20height%3D%2210%22%20fill%3D%22%23e0e0e0%22%2F%3E%3C%2Fsvg%3E');">
              <canvas id="previewCanvas" class="max-w-full rounded" style="max-height: 400px;"></canvas>
            </div>
          </div>

          <!-- File Info -->
          <div>
            <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" data-i18n="icFileInfo">File Information</p>
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 space-y-3">
              <div class="flex justify-between text-sm">
                <span class="text-gray-500 dark:text-gray-400" data-i18n="icFileName">File name</span>
                <span class="text-gray-900 dark:text-gray-100 font-medium truncate ml-2" id="infoName">—</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500 dark:text-gray-400" data-i18n="icFileSize">Size</span>
                <span class="text-gray-900 dark:text-gray-100 font-medium" id="infoSize">—</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500 dark:text-gray-400" data-i18n="icFormat">Format</span>
                <span class="text-gray-900 dark:text-gray-100 font-medium" id="infoFormat">—</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500 dark:text-gray-400" data-i18n="icResolution">Resolution</span>
                <span class="text-gray-900 dark:text-gray-100 font-medium" id="infoResolution">—</span>
              </div>
            </div>

            <!-- Target Format -->
            <div class="mt-4">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" data-i18n="icSelectFormat">Target Format</label>
              <select id="targetFormat" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-transparent dark:bg-gray-700 dark:text-gray-100">
                <option value="png">PNG — Lossless, transparency</option>
                <option value="jpg">JPG — Photos, small size</option>
                <option value="webp">WebP — Modern, best compression</option>
                <option value="bmp">BMP — Uncompressed bitmap</option>
                <option value="tiff">TIFF — Print, high quality</option>
                <option value="gif">GIF — Simple graphics</option>
                <option value="ico">ICO — Favicons (max 256px)</option>
              </select>
            </div>

            <!-- Quality Slider -->
            <div id="qualitySection" class="mt-4 hidden">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                <span data-i18n="icQuality">Quality</span>: <span id="qualityValue" class="text-amber-600 dark:text-amber-400">90</span>%
              </label>
              <input type="range" id="qualitySlider" min="1" max="100" value="90" class="w-full h-2 bg-gray-200 dark:bg-gray-600 rounded-lg appearance-none cursor-pointer accent-amber-500" />
              <div class="flex justify-between text-xs text-gray-400 dark:text-gray-500 mt-1">
                <span data-i18n="icSmallFile">Smaller file</span>
                <span data-i18n="icBetterQuality">Better quality</span>
              </div>
            </div>

            <!-- Convert Button -->
            <button
              id="convertBtn"
              class="mt-4 w-full px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white rounded-lg font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <span data-i18n="icConvert">Convert & Download</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Progress -->
      <div id="progressSection" class="hidden">
        <div class="flex items-center justify-center gap-3 py-4">
          <svg class="animate-spin h-5 w-5 text-amber-500" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span class="text-gray-600 dark:text-gray-400" data-i18n="icConverting">Converting...</span>
        </div>
      </div>

      <!-- Result -->
      <div id="resultSection" class="hidden">
        <div class="p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
          <div class="flex items-center justify-between flex-wrap gap-3">
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <p class="font-medium text-green-800 dark:text-green-200" data-i18n="icSuccess">Conversion complete!</p>
                <p class="text-sm text-green-600 dark:text-green-400" id="sizeComparison"></p>
              </div>
            </div>
            <button
              id="downloadBtn"
              class="px-5 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span data-i18n="icDownload">Download</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Error -->
      <div id="errorSection" class="hidden">
        <div class="p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-red-800 dark:text-red-200" id="errorMessage"></p>
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <FAQ items={tool.faq} />
  </div>
</Layout>

<script is:inline>
(function() {
  // ==========================================
  // API URL
  // ==========================================
  var API_URL = window.location.hostname === 'localhost'
    ? 'http://localhost:8000'
    : 'https://api.moletools.dev';

  // ==========================================
  // DOM Elements
  // ==========================================
  var dropZone = document.getElementById('dropZone');
  var dropZoneContent = document.getElementById('dropZoneContent');
  var fileInput = document.getElementById('fileInput');
  var previewSection = document.getElementById('previewSection');
  var previewCanvas = document.getElementById('previewCanvas');
  var infoName = document.getElementById('infoName');
  var infoSize = document.getElementById('infoSize');
  var infoFormat = document.getElementById('infoFormat');
  var infoResolution = document.getElementById('infoResolution');
  var targetFormat = document.getElementById('targetFormat');
  var qualitySection = document.getElementById('qualitySection');
  var qualitySlider = document.getElementById('qualitySlider');
  var qualityValue = document.getElementById('qualityValue');
  var convertBtn = document.getElementById('convertBtn');
  var progressSection = document.getElementById('progressSection');
  var resultSection = document.getElementById('resultSection');
  var sizeComparison = document.getElementById('sizeComparison');
  var downloadBtn = document.getElementById('downloadBtn');
  var errorSection = document.getElementById('errorSection');
  var errorMessage = document.getElementById('errorMessage');

  var currentFile = null;
  var convertedBlob = null;
  var convertedFilename = '';

  // ==========================================
  // Utilities
  // ==========================================
  function formatBytes(bytes) {
    if (bytes === 0) return '0 B';
    var k = 1024;
    var sizes = ['B', 'KB', 'MB', 'GB'];
    var i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
  }

  function getFormatName(type) {
    var map = {
      'image/png': 'PNG',
      'image/jpeg': 'JPEG',
      'image/webp': 'WebP',
      'image/bmp': 'BMP',
      'image/tiff': 'TIFF',
      'image/gif': 'GIF',
      'image/x-icon': 'ICO'
    };
    return map[type] || type;
  }

  function showQualitySlider() {
    var fmt = targetFormat ? targetFormat.value : '';
    if (fmt === 'jpg' || fmt === 'webp') {
      qualitySection.classList.remove('hidden');
    } else {
      qualitySection.classList.add('hidden');
    }
  }

  // ==========================================
  // Drop Zone Events
  // ==========================================
  if (dropZone) {
    dropZone.addEventListener('click', function() {
      fileInput.click();
    });

    dropZone.addEventListener('dragover', function(e) {
      e.preventDefault();
      dropZone.classList.add('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
    });

    dropZone.addEventListener('dragleave', function(e) {
      e.preventDefault();
      dropZone.classList.remove('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
    });

    dropZone.addEventListener('drop', function(e) {
      e.preventDefault();
      dropZone.classList.remove('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
      var files = e.dataTransfer.files;
      if (files.length > 0 && files[0].type.startsWith('image/')) {
        handleFile(files[0]);
      }
    });
  }

  if (fileInput) {
    fileInput.addEventListener('change', function() {
      if (fileInput.files.length > 0) {
        handleFile(fileInput.files[0]);
      }
    });
  }

  // ==========================================
  // Handle File Selection
  // ==========================================
  function handleFile(file) {
    // Validate size (10MB)
    if (file.size > 10 * 1024 * 1024) {
      showError('File is too large. Maximum size is 10MB.');
      return;
    }

    currentFile = file;
    convertedBlob = null;

    // Hide result/error
    resultSection.classList.add('hidden');
    errorSection.classList.add('hidden');

    // Show preview section
    previewSection.classList.remove('hidden');
    previewSection.style.animation = 'fadeIn 0.3s ease';

    // Update file info
    infoName.textContent = file.name;
    infoSize.textContent = formatBytes(file.size);
    infoFormat.textContent = getFormatName(file.type);

    // Draw preview on canvas
    var reader = new FileReader();
    reader.onload = function(e) {
      var img = new Image();
      img.onload = function() {
        infoResolution.textContent = img.width + ' × ' + img.height + ' px';

        // Scale to fit max 400px
        var maxSize = 400;
        var scale = Math.min(maxSize / img.width, maxSize / img.height, 1);
        var w = Math.round(img.width * scale);
        var h = Math.round(img.height * scale);

        previewCanvas.width = w;
        previewCanvas.height = h;
        var ctx = previewCanvas.getContext('2d');
        ctx.drawImage(img, 0, 0, w, h);
      };
      img.src = e.target.result;
    };
    reader.readAsDataURL(file);

    // Update drop zone to show filename
    dropZoneContent.innerHTML =
      '<p class="text-amber-600 dark:text-amber-400 font-medium">' + escapeHtml(file.name) + '</p>' +
      '<p class="text-sm text-gray-400 dark:text-gray-500 mt-1" data-i18n="icClickToChange">Click to change file</p>';

    // Re-apply translations
    applyTranslations();

    showQualitySlider();
  }

  function escapeHtml(str) {
    var div = document.createElement('div');
    div.textContent = str;
    return div.innerHTML;
  }

  // ==========================================
  // Quality Slider
  // ==========================================
  if (qualitySlider) {
    qualitySlider.addEventListener('input', function() {
      qualityValue.textContent = qualitySlider.value;
    });
  }

  if (targetFormat) {
    targetFormat.addEventListener('change', showQualitySlider);
  }

  // ==========================================
  // Convert
  // ==========================================
  if (convertBtn) {
    convertBtn.addEventListener('click', function() {
      if (!currentFile) return;

      var fmt = targetFormat.value;
      var quality = parseInt(qualitySlider.value);

      // Hide previous results
      resultSection.classList.add('hidden');
      errorSection.classList.add('hidden');

      // Show progress
      progressSection.classList.remove('hidden');
      convertBtn.disabled = true;

      // Build FormData
      var formData = new FormData();
      formData.append('file', currentFile);
      formData.append('format', fmt);
      formData.append('quality', quality.toString());

      fetch(API_URL + '/convert/image', {
        method: 'POST',
        body: formData
      })
      .then(function(response) {
        if (!response.ok) {
          return response.json().then(function(data) {
            throw new Error(data.detail || 'Conversion failed');
          });
        }

        // Get filename from Content-Disposition header
        var disposition = response.headers.get('Content-Disposition');
        if (disposition) {
          var match = disposition.match(/filename=(.+)/);
          if (match) convertedFilename = match[1];
        }
        if (!convertedFilename) {
          var baseName = currentFile.name.replace(/\.[^.]+$/, '');
          convertedFilename = baseName + '.' + fmt;
        }

        return response.blob();
      })
      .then(function(blob) {
        convertedBlob = blob;

        // Show result
        progressSection.classList.add('hidden');
        resultSection.classList.remove('hidden');
        resultSection.style.animation = 'fadeIn 0.3s ease';
        convertBtn.disabled = false;

        // Size comparison
        var originalLabel = typeof MoleI18n !== 'undefined' ? MoleI18n.t('icOriginal') : 'Original';
        var convertedLabel = typeof MoleI18n !== 'undefined' ? MoleI18n.t('icConverted') : 'Converted';
        sizeComparison.textContent = originalLabel + ': ' + formatBytes(currentFile.size) + ' → ' + convertedLabel + ': ' + formatBytes(blob.size);
      })
      .catch(function(err) {
        progressSection.classList.add('hidden');
        convertBtn.disabled = false;
        showError(err.message || 'Conversion failed. Please try again.');
      });
    });
  }

  // ==========================================
  // Download
  // ==========================================
  if (downloadBtn) {
    downloadBtn.addEventListener('click', function() {
      if (!convertedBlob) return;
      var url = URL.createObjectURL(convertedBlob);
      var a = document.createElement('a');
      a.href = url;
      a.download = convertedFilename;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    });
  }

  // ==========================================
  // Error Display
  // ==========================================
  function showError(msg) {
    errorSection.classList.remove('hidden');
    errorMessage.textContent = msg;
  }

  // ==========================================
  // i18n
  // ==========================================
  function applyTranslations() {
    if (typeof MoleI18n !== 'undefined') {
      document.querySelectorAll('#dropZoneContent [data-i18n]').forEach(function(el) {
        var key = el.getAttribute('data-i18n');
        el.textContent = MoleI18n.t(key);
      });
    }
  }

  if (typeof MoleI18n !== 'undefined') {
    MoleI18n.addTranslations('en', {
      icDesc: 'Convert images between PNG, JPG, WebP, BMP, TIFF, GIF, and ICO formats',
      icDragDrop: 'Drag & drop an image here or click to browse',
      icPreview: 'Preview',
      icFileInfo: 'File Information',
      icFileName: 'File name',
      icFileSize: 'Size',
      icFormat: 'Format',
      icResolution: 'Resolution',
      icSelectFormat: 'Target Format',
      icQuality: 'Quality',
      icSmallFile: 'Smaller file',
      icBetterQuality: 'Better quality',
      icConvert: 'Convert & Download',
      icConverting: 'Converting...',
      icSuccess: 'Conversion complete!',
      icDownload: 'Download',
      icOriginal: 'Original',
      icConverted: 'Converted',
      icClickToChange: 'Click to change file'
    });

    MoleI18n.addTranslations('ru', {
      icDesc: 'Конвертация изображений между PNG, JPG, WebP, BMP, TIFF, GIF и ICO форматами',
      icDragDrop: 'Перетащите изображение сюда или нажмите для выбора',
      icPreview: 'Предпросмотр',
      icFileInfo: 'Информация о файле',
      icFileName: 'Имя файла',
      icFileSize: 'Размер',
      icFormat: 'Формат',
      icResolution: 'Разрешение',
      icSelectFormat: 'Целевой формат',
      icQuality: 'Качество',
      icSmallFile: 'Меньший файл',
      icBetterQuality: 'Лучшее качество',
      icConvert: 'Конвертировать и скачать',
      icConverting: 'Конвертация...',
      icSuccess: 'Конвертация завершена!',
      icDownload: 'Скачать',
      icOriginal: 'Оригинал',
      icConverted: 'Результат',
      icClickToChange: 'Нажмите чтобы сменить файл'
    });

    var currentLang = MoleI18n.getCurrentLang();
    MoleI18n.setLanguage(currentLang);
  }
})();
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: #f59e0b;
    cursor: pointer;
  }
</style>
