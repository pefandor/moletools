---
import Layout from '../../layouts/Layout.astro';
import FAQ from '../../components/FAQ.astro';
import toolsData from '../../data/tools.json';

const tool = toolsData.find(t => t.id === 'pdf-reorder')!;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebApplication',
  name: tool.name,
  description: tool.description,
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Any',
  offers: { '@type': 'Offer', price: '0', priceCurrency: 'USD' },
  browserRequirements: 'Requires JavaScript',
  permissions: 'No special permissions required'
};

const faqJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: tool.faq.map(item => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: { '@type': 'Answer', text: item.answer }
  }))
};
---

<Layout title={tool.metaTitle} description={tool.metaDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqJsonLd)} />

  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
        <img src="/images/mole/Converter.png" alt="Mole's Tools" class="inline h-14 w-14 mr-2 object-contain" style="vertical-align: -10px;" />
        <span>Reorder Pages</span>
      </h1>
      <p class="text-gray-600 dark:text-gray-400" data-i18n="roDesc">Rearrange PDF pages in any order using drag and drop</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 space-y-6">

      <!-- Drop Zone -->
      <div
        id="dropZone"
        class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl p-8 text-center cursor-pointer hover:border-amber-400 dark:hover:border-amber-500 transition-colors"
      >
        <svg class="w-12 h-12 mx-auto text-gray-400 dark:text-gray-500 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <p class="text-gray-600 dark:text-gray-400 font-medium" data-i18n="roUpload">Drag & drop a PDF file here or click to browse</p>
        <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">PDF — max 50MB</p>
        <input type="file" id="fileInput" accept="application/pdf" class="hidden" />
      </div>

      <!-- Settings Section -->
      <div id="settingsSection" class="hidden space-y-5">
        <!-- File info card -->
        <div class="flex items-center gap-4 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
          <div class="w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-gray-900 dark:text-gray-100 truncate" id="fileName">—</p>
            <p class="text-sm text-gray-500 dark:text-gray-400" id="fileInfo">—</p>
          </div>
          <button id="changeFileBtn" class="text-sm text-amber-600 dark:text-amber-400 hover:text-amber-700 font-medium whitespace-nowrap">
            <span data-i18n="roChange">Change</span>
          </button>
        </div>

        <!-- Help text -->
        <p class="text-sm text-gray-500 dark:text-gray-400" data-i18n="roDragHint">Drag to reorder pages</p>

        <!-- Page list -->
        <div id="pageList" class="space-y-2">
          <!-- Draggable page cards inserted here -->
        </div>

        <!-- Reorder button -->
        <button id="reorderBtn" class="w-full px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white rounded-lg font-medium transition-colors disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2">
          <span data-i18n="roApplyBtn">Apply New Order</span>
        </button>
      </div>

      <!-- Progress -->
      <div id="progressSection" class="hidden">
        <div class="space-y-3 py-2">
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400" data-i18n="roReordering">Reordering...</span>
            <span class="text-gray-500 dark:text-gray-400" id="progressText"></span>
          </div>
          <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2.5">
            <div id="progressBar" class="bg-amber-500 h-2.5 rounded-full transition-all duration-300" style="width: 0%"></div>
          </div>
        </div>
      </div>

      <!-- Result -->
      <div id="resultSection" class="hidden space-y-4">
        <div class="flex items-center justify-between flex-wrap gap-3 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="font-medium text-green-800 dark:text-green-200" data-i18n="roSuccess">Pages reordered successfully!</p>
          </div>
          <button id="downloadBtn" class="px-5 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span data-i18n="roDownload">Download</span>
          </button>
        </div>
      </div>

      <!-- Error -->
      <div id="errorSection" class="hidden">
        <div class="p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-red-800 dark:text-red-200" id="errorMessage"></p>
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <FAQ items={tool.faq} />
  </div>
</Layout>

<script is:inline>
(function() {
  // ==========================================
  // API URL
  // ==========================================
  var API_URL = window.location.hostname === 'localhost'
    ? 'http://localhost:8000'
    : 'https://api.moletools.dev';

  // ==========================================
  // State
  // ==========================================
  var currentFile = null;
  var pageOrder = [];
  var resultBlob = null;

  // ==========================================
  // DOM Elements
  // ==========================================
  var dropZone = document.getElementById('dropZone');
  var fileInput = document.getElementById('fileInput');
  var settingsSection = document.getElementById('settingsSection');
  var fileName = document.getElementById('fileName');
  var fileInfo = document.getElementById('fileInfo');
  var changeFileBtn = document.getElementById('changeFileBtn');
  var pageList = document.getElementById('pageList');
  var reorderBtn = document.getElementById('reorderBtn');
  var progressSection = document.getElementById('progressSection');
  var progressBar = document.getElementById('progressBar');
  var progressText = document.getElementById('progressText');
  var resultSection = document.getElementById('resultSection');
  var downloadBtn = document.getElementById('downloadBtn');
  var errorSection = document.getElementById('errorSection');
  var errorMessage = document.getElementById('errorMessage');

  // ==========================================
  // Utilities
  // ==========================================
  function formatBytes(bytes) {
    if (bytes === 0) return '0 B';
    var k = 1024;
    var sizes = ['B', 'KB', 'MB', 'GB'];
    var i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
  }

  function escapeHtml(str) {
    var div = document.createElement('div');
    div.textContent = str;
    return div.innerHTML;
  }

  function t(key) {
    if (typeof MoleI18n !== 'undefined') return MoleI18n.t(key);
    return key;
  }

  function showError(msg) {
    errorSection.classList.remove('hidden');
    errorMessage.textContent = msg;
  }

  // ==========================================
  // Drop Zone
  // ==========================================
  if (dropZone) {
    dropZone.addEventListener('click', function() { fileInput.click(); });

    dropZone.addEventListener('dragover', function(e) {
      e.preventDefault();
      dropZone.classList.add('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
    });

    dropZone.addEventListener('dragleave', function(e) {
      e.preventDefault();
      dropZone.classList.remove('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
    });

    dropZone.addEventListener('drop', function(e) {
      e.preventDefault();
      dropZone.classList.remove('border-amber-400', 'dark:border-amber-500', 'bg-amber-50', 'dark:bg-amber-900/10');
      var files = e.dataTransfer.files;
      if (files.length > 0 && files[0].type === 'application/pdf') {
        handleFile(files[0]);
      }
    });
  }

  if (fileInput) {
    fileInput.addEventListener('change', function() {
      if (fileInput.files.length > 0) {
        handleFile(fileInput.files[0]);
        fileInput.value = '';
      }
    });
  }

  if (changeFileBtn) {
    changeFileBtn.addEventListener('click', function() { fileInput.click(); });
  }

  // ==========================================
  // Handle File
  // ==========================================
  function handleFile(file) {
    if (file.size > 50 * 1024 * 1024) {
      showError('PDF file is too large. Maximum size is 50MB.');
      return;
    }

    if (file.type !== 'application/pdf') {
      showError('Please select a PDF file.');
      return;
    }

    currentFile = file;
    resultBlob = null;

    // Hide previous results
    resultSection.classList.add('hidden');
    errorSection.classList.add('hidden');

    // Show settings
    settingsSection.classList.remove('hidden');
    settingsSection.style.animation = 'fadeIn 0.3s ease';

    // File info
    fileName.textContent = escapeHtml(file.name);
    fileInfo.textContent = formatBytes(file.size);

    // Count pages and render list
    countPdfPages(file, function(count) {
      pageOrder = [];
      for (var i = 1; i <= count; i++) {
        pageOrder.push(i);
      }
      fileInfo.textContent = formatBytes(file.size) + ' — ' + count + ' ' + t('roPage').toLowerCase() + (count !== 1 ? 's' : '');
      renderPageList();
    });
  }

  // ==========================================
  // Count PDF Pages
  // ==========================================
  function countPdfPages(file, callback) {
    var reader = new FileReader();
    reader.onload = function(e) {
      var data = new Uint8Array(e.target.result);
      var count = 0;
      // Search for /Type /Page (but not /Type /Pages)
      for (var i = 0; i < data.length - 20; i++) {
        // Look for /Type
        if (data[i] === 0x2F && data[i+1] === 0x54 && data[i+2] === 0x79 &&
            data[i+3] === 0x70 && data[i+4] === 0x65) {
          // Skip whitespace after /Type
          var j = i + 5;
          while (j < data.length && (data[j] === 0x20 || data[j] === 0x0A || data[j] === 0x0D || data[j] === 0x09)) {
            j++;
          }
          // Check for /Page
          if (j < data.length - 5 &&
              data[j] === 0x2F && data[j+1] === 0x50 && data[j+2] === 0x61 &&
              data[j+3] === 0x67 && data[j+4] === 0x65) {
            // Make sure it's not /Pages
            if (j + 5 >= data.length || data[j+5] !== 0x73) {
              count++;
            }
          }
        }
      }
      // Fallback: at least 1 page if count is 0
      if (count === 0) count = 1;
      callback(count);
    };
    reader.readAsArrayBuffer(file);
  }

  // ==========================================
  // Render Page List
  // ==========================================
  function renderPageList() {
    pageList.innerHTML = '';

    for (var idx = 0; idx < pageOrder.length; idx++) {
      (function(index) {
        var pageNum = pageOrder[index];
        var card = document.createElement('div');
        card.className = 'flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg cursor-grab active:cursor-grabbing hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors border border-transparent hover:border-amber-400';
        card.draggable = true;
        card.dataset.index = index;
        card.style.animation = 'fadeIn 0.2s ease ' + (index * 0.03) + 's both';

        // Drag handle
        var handle = document.createElement('span');
        handle.className = 'text-gray-400 dark:text-gray-500 text-lg flex-shrink-0 select-none';
        handle.textContent = '\u2800\u2800';
        handle.innerHTML = '&#x2807;';
        card.appendChild(handle);

        // Page number badge
        var badge = document.createElement('span');
        badge.className = 'w-8 h-8 bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400 rounded-lg flex items-center justify-center font-medium text-sm flex-shrink-0';
        badge.textContent = pageNum;
        card.appendChild(badge);

        // Page label
        var label = document.createElement('span');
        label.className = 'text-gray-900 dark:text-gray-100 text-sm';
        label.textContent = t('roPage') + ' ' + pageNum;
        card.appendChild(label);

        // Drag events
        card.addEventListener('dragstart', function(e) {
          e.dataTransfer.effectAllowed = 'move';
          e.dataTransfer.setData('text/plain', index.toString());
          card.classList.add('opacity-50');
        });

        card.addEventListener('dragend', function() {
          card.classList.remove('opacity-50');
          // Remove all drag-over highlights
          var items = pageList.querySelectorAll('.drag-over');
          for (var k = 0; k < items.length; k++) {
            items[k].classList.remove('drag-over');
          }
        });

        card.addEventListener('dragover', function(e) {
          e.preventDefault();
          e.dataTransfer.dropEffect = 'move';
          card.classList.add('drag-over');
        });

        card.addEventListener('dragleave', function() {
          card.classList.remove('drag-over');
        });

        card.addEventListener('drop', function(e) {
          e.preventDefault();
          e.stopPropagation();
          card.classList.remove('drag-over');

          var fromIndex = parseInt(e.dataTransfer.getData('text/plain'));
          var toIndex = index;

          if (fromIndex !== toIndex && !isNaN(fromIndex)) {
            var item = pageOrder.splice(fromIndex, 1)[0];
            pageOrder.splice(toIndex, 0, item);
            renderPageList();
          }
        });

        pageList.appendChild(card);
      })(idx);
    }
  }

  // ==========================================
  // Reorder
  // ==========================================
  if (reorderBtn) {
    reorderBtn.addEventListener('click', function() {
      if (!currentFile || pageOrder.length === 0) return;

      resultSection.classList.add('hidden');
      errorSection.classList.add('hidden');
      progressSection.classList.remove('hidden');
      reorderBtn.disabled = true;

      // Fake progress
      progressBar.style.width = '0%';
      var fakeProgress = 0;
      var progressInterval = setInterval(function() {
        if (fakeProgress < 85) {
          fakeProgress += Math.random() * 8;
          if (fakeProgress > 85) fakeProgress = 85;
          progressBar.style.width = fakeProgress + '%';
          progressText.textContent = Math.round(fakeProgress) + '%';
        }
      }, 300);

      var formData = new FormData();
      formData.append('file', currentFile);
      formData.append('order', pageOrder.join(','));

      fetch(API_URL + '/pdf/reorder', {
        method: 'POST',
        body: formData
      })
      .then(function(response) {
        if (!response.ok) {
          return response.json().then(function(data) {
            throw new Error(data.detail || 'Reorder failed');
          });
        }
        return response.blob();
      })
      .then(function(blob) {
        clearInterval(progressInterval);
        progressBar.style.width = '100%';
        progressText.textContent = '100%';
        resultBlob = blob;

        setTimeout(function() {
          progressSection.classList.add('hidden');
          reorderBtn.disabled = false;

          resultSection.classList.remove('hidden');
          resultSection.style.animation = 'fadeIn 0.3s ease';
        }, 400);
      })
      .catch(function(err) {
        clearInterval(progressInterval);
        progressSection.classList.add('hidden');
        reorderBtn.disabled = false;
        showError(err.message || 'Reorder failed. Please try again.');
      });
    });
  }

  // ==========================================
  // Download
  // ==========================================
  if (downloadBtn) {
    downloadBtn.addEventListener('click', function() {
      if (!resultBlob) return;
      var url = URL.createObjectURL(resultBlob);
      var a = document.createElement('a');
      a.href = url;
      var baseName = currentFile ? currentFile.name.replace('.pdf', '') : 'document';
      a.download = baseName + '_reordered.pdf';
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    });
  }

  // ==========================================
  // i18n
  // ==========================================
  if (typeof MoleI18n !== 'undefined') {
    MoleI18n.addTranslations('en', {
      roDesc: 'Rearrange PDF pages in any order using drag and drop',
      roUpload: 'Drag & drop a PDF file here or click to browse',
      roChange: 'Change',
      roDragHint: 'Drag to reorder pages',
      roPage: 'Page',
      roApplyBtn: 'Apply New Order',
      roReordering: 'Reordering...',
      roSuccess: 'Pages reordered successfully!',
      roDownload: 'Download'
    });

    MoleI18n.addTranslations('ru', {
      roDesc: 'Измените порядок страниц PDF перетаскиванием',
      roUpload: 'Перетащите PDF файл сюда или нажмите для выбора',
      roChange: 'Сменить',
      roDragHint: 'Перетащите для изменения порядка',
      roPage: 'Страница',
      roApplyBtn: 'Применить новый порядок',
      roReordering: 'Переупорядочивание...',
      roSuccess: 'Порядок страниц изменён!',
      roDownload: 'Скачать'
    });

    var currentLang = MoleI18n.getCurrentLang();
    MoleI18n.setLanguage(currentLang);
  }
})();
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .drag-over {
    border-color: #f59e0b !important;
    background-color: rgba(245, 158, 11, 0.05);
  }
</style>
